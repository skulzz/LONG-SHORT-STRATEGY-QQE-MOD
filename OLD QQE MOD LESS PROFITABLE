// === INPUT BACKTEST RANGE ===
fromMonth = input(defval = 11, title = "From Month", minval = 1, maxval = 12)
fromDay = input(defval = 2, title = "From Day", minval = 1, maxval = 31)
fromYear = input(defval = 2022, title = "From Year", minval = 1970)
thruMonth = input(defval = 12, title = "Thru Month", minval = 1, maxval = 12)
thruDay = input(defval = 6, title = "Thru Day", minval = 1, maxval = 31)
thruYear = input(defval = 2112, title = "Thru Year", minval = 1970)

// === INPUT SHOW PLOT ===
showDate = input(defval = true, title = "Show Date Range")

// === FUNCTION EXAMPLE ===
start = timestamp(fromYear, fromMonth, fromDay, 9, 00) // backtest start window
finish = timestamp(thruYear, thruMonth, thruDay, 16, 30) // backtest finish window
withinWindow = time >= start and time <= finish
// Define the current equity
equity = strategy.equity
// Define the entry price as the current close price
entryPrice = close[0]
// Define the maximum allowed loss in USD
maxLoss = equity * 0.01
// Define the stop loss price as the entry price minus the maximum allowed loss
stopLossPriceInPoints = 1000
pointToUsdConversionFactor = 0.01
stopLossPrice = stopLossPriceInPoints * pointToUsdConversionFactor
// Define the stop loss function
// Calculate the current loss in USD
currentLoss = entryPrice - close[0]
    // Check if the current loss is greater than the maximum allowed loss
//if strategy.position_size > 0 and currentLoss > maxLoss
        // If the current loss is greater than the maximum allowed loss, exit the trade
//        strategy.close("Stop Loss", entryPrice - maxLoss)
        // Set a flag to indicate that the trade was closed
//        tradeClosed = true
//    else
        // If the trade was not closed, set the flag to false
//        tradeClosed = false
            // If the current low is not less than the stop loss price, return false
// Define variables for long and short entry conditions
// Define variables for long and short entry conditions
// Define variables for long and short entry conditions
longEntry = withinWindow and ((close > hma(close, 14)) or (buySignal and wtGoldBuy))
shortEntry = withinWindow and ((close < hma(close, 14)) or sellSignal and wtGoldBuy)

// Define variables for long and short exit conditions
longExit = (close < hma(close, 14)) or ((strategy.position_size > 0) and (low[0] < stopLossPrice))
shortExit = (close > hma(close, 14)) or ((strategy.position_size > 0) and (low[0] < stopLossPrice))
           //((sommiFlagShow and sommiBearish) or
           //(sommiDiamondShow and sommiBearishDiamond)) or 
           //sellSignal or
           //(wtDivShow and sellSignalDiv))

// Set plot colors for long and short entry and exit conditions
plotshape(longEntry, title='Long Entry', style=shape.triangleup, color=color.green, location=location.belowbar)
plotshape(shortEntry, title='Short Entry', style=shape.triangledown, color=color.red, location=location.abovebar)

// Define long entryf
if longEntry
    strategy.entry("Long", strategy.long, stop=low[1], limit=high[1])

// Define short entry
if shortEntry
    strategy.entry("Short", strategy.short, stop=high[1], limit=low[1])

// Define long exit
if longExit
    strategy.close("Long Exit")

// Define short exit
if shortExit
    strategy.close("Short Exit")
